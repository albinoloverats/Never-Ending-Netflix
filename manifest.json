{
  "manifest_version": 2,
  "name": "__MSG_manifest_name__",
  "description": "__MSG_manifest_description__",
  "version": "1.0.4",
  "permissions": [
    "*://*.netflix.com/*",
    "*://*.netflix.co.uk/*",
    "*://*.netflix.ar/*",
    "*://*.netflix.au/*",
    "*://*.netflix.br/*",
    "*://*.netflix.ca/*",
    "*://*.netflix.fr/*",
    "*://*.netflix.de/*",
    "*://*.netflix.cz/*",
    "*://*.netflix.hk/*",
    "*://*.netflix.in/*",
    "*://*.netflix.jp/*",
    "*://*.netflix.lt/*",
    "*://*.netflix.no/*",
    "*://*.netflix.nl/*",
    "*://*.netflix.pl/*",
    "*://*.netflix.ru/*",
    "*://*.netflix.sg/*",
    "*://*.netflix.sk/*",
    "*://*.netflix.es/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.netflix.co.uk/*",
        "*://*.netflix.ar/*",
        "*://*.netflix.au/*",
        "*://*.netflix.br/*",
        "*://*.netflix.ca/*",
        "*://*.netflix.fr/*",
        "*://*.netflix.de/*",
        "*://*.netflix.cz/*",
        "*://*.netflix.hk/*",
        "*://*.netflix.in/*",
        "*://*.netflix.jp/*",
        "*://*.netflix.lt/*",
        "*://*.netflix.no/*",
        "*://*.netflix.nl/*",
        "*://*.netflix.pl/*",
        "*://*.netflix.ru/*",
        "*://*.netflix.sg/*",
        "*://*.netflix.sk/*",
        "*://*.netflix.es/*"
      ],
      "js": [
        "js/libs/jquery-3.6.0.min.js",
        "js/common.js",
        "NEN.js"
      ]
    }
  ],
  "icons": {
    "64": "images/icon64.png",
    "32": "images/icon32.png",
    "38": "images/icon.png",
    "128": "images/icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/common.js",
      "js/hot-reload.js"
    ]
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_title": "__MSG_manifest_name__"
  },
  "default_locale": "en",
  "homepage_url": "https://github.com/albinoloverats/Never-Ending-Netflix",
  "web_accessible_resources": [
    "js/*",
    "data/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "never-ending-netflix@ashley.anderson.io"
    }
  }
}
